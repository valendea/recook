<div class="container mt-4 mb-4">
<h3>Log In</h3>
<div class="pt-2 pl-4 pr-4">
<%= form_with url: sessions_path do %>
	<div class="field">
		<%= label_tag :email %> <br>
		<%= text_field_tag :email, params[:email], class:"form-control" %>
	</div>
	<br>
	<div class="field">
		<%= label_tag :password %> <br>
		<%= password_field_tag :password, params[:password], class:"form-control" %>
	</div>
	<br>
	<div class="actions"><%= submit_tag "Log In", class:"btn btn-outline-dark" %></div>
<% end %>
</div>
<br>
<%= link_to "Log in with Facebook", "/auth/facebook" %> |
<%= link_to "Log In with Google", "/auth/google_oauth2" %>
</div>