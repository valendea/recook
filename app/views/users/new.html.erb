<h1>Sign Up</h1>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<h5>Form is invalid</h5>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="field">
		<%= f.label :email %> <br>
		<%= f.text_field :email %>
	</div>

	<div class="field">
		<%= f.label :password %> <br>
		<%= f.password_field :password %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation %> <br>
		<%= f.password_field :password_confirmation %>
	</div>

	<div class="actions">
		<%= f.submit "Sign Up" %>
	</div>

<% end %>