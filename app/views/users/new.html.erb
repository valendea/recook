<div class="container mt-4 mb-4">
<h3>Sign Up</h3>

 <div>
  <%= form_for @user do |form| %>
	<% if @user.errors.any? %>
		<h5>Form is invalid</h5>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

    <%= render partial: '/users/form', object: form %>

    <div class="actions">
			<%= form.submit "Sign Up", class:"btn btn-outline-dark" %>
		</div> <br>
		<%= link_to "Sign up with Facebook", "/auth/facebook" %> |
		<%= link_to "Sign up with Google", "/auth/google_oauth2" %>
	<% end %>
	</div>


</div>